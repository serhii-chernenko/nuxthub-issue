{
  "name": "demo",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serhii-chernenko/nuxthub-issue"
  },
  "author": "Serhii Chernenko",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "workspaces": [
    "src/layers/**",
    "src/apps/*"
  ],
  "scripts": {
    "dev:cleanup": "npm run dev:cleanup --workspaces --if-present",
    "dev:prepare": "npm run dev:prepare --workspaces --if-present",
    "dev:admin": "npm run dev --workspace @demo/app",
    "postinstall": "npm-run-all --serial dev:cleanup dev:prepare",
    "dev": "npm-run-all --serial postinstall dev:admin",
    "lint": "eslint src/",
    "format": "eslint --fix src/",
    "prepare": "husky"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "latest",
    "nuxthub": "latest"
  },
  "devDependencies": {
    "eslint": "latest",
    "husky": "latest",
    "npm-run-all": "latest"
  }
}